<div class="card">
    <h1>üéÆ Juego Misterioso</h1>
    <p>Adivina el n√∫mero del 1 al 10</p>

    <input type="number" id="numero" placeholder="Tu n√∫mero aqu√≠">
    <button onclick="jugar()">Probar suerte</button>

    <div class="msg" id="mensaje"></div>
</div>

<script>
    let numero = Math.floor(Math.random() * 10) + 1;
    let intentos = 0;

    function jugar() {
        const input = document.getElementById("numero");
        const msg = document.getElementById("mensaje");

        if (input.value === "") {
            msg.innerHTML = "‚ùå Escribe un n√∫mero";
            return;
        }

        intentos++;
        const intento = parseInt(input.value);

        if (intento === numero) {
            msg.innerHTML = "‚ùå CASI üòà<br>Era correcto‚Ä¶ pero no ganaste üòÇ";
            numero = Math.floor(Math.random() * 10) + 1; // trampa
        } else {
            msg.innerHTML = "‚ùå Incorrecto üòè Intenta otra vez";
        }

        if (intentos >= 7) {
            msg.innerHTML = "üíÄ GAME OVER<br>Demasiados intentos üòÇ";
            document.querySelector("button").disabled = true;
        }

        input.value = "";
        input.focus();
    }
</script>

